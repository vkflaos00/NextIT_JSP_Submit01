<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="free.*"
		template="/WEB-INF/views/free/tiles/freeLayout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/spring/tiles/part/header.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/free/tiles/{1}.jsp" />
	</definition>


	<definition name="member.*"
		template="/WEB-INF/views/member/tiles/memberLayout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/spring/tiles/part/header.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/member/tiles/{1}.jsp" />
	</definition>

	<definition name="home.*"
		template="/WEB-INF/views/home/tiles/homeLayout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/spring/tiles/part/header.jsp" />
		<put-attribute name="body"
			value="/WEB-INF/views/home/tiles/{1}.jsp" />
	</definition>
</tiles-definitions>